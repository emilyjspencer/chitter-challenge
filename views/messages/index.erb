<h3>Whats happening?</h3>
  <form action="/messages" method="post">
    <input id="box" type="text" name="message" placeholder="Write your message here">
    <input id="submit" type="submit" value="Submit">
  </form>
<ul>
  <% @messages.each do |message| %>
    <% if message.user_id == @user.id %>
      <h4><%= @user.peep_handle %>: </h4>
    <% elsif (@peeper = User.find_details(id: message.user_id)) %>
      <h4><%= @peeper.peep_handle %>: </h4>
    <% end %>
        <p><%= message.message %></p>
        <br>Posted at: <%= message.timestamp %></br>
        --------------------
    <br></br>
  <% end %>
</ul>
</center>

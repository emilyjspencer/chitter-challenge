feature 'Adding message' do
  scenario ' A user can add a message and see it on the page' do
    visit('/messages/new')
    fill_in :name, with: 'Emily'
    fill_in :chitter_handle, with :'lajoiedevivre89'
    fill_in :message, with: 'This is my first message'
    click_button 'Post'
    expect(page).to have_content 'This is my first message'
  end
end 

